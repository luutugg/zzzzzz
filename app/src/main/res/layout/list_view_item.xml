<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvItemTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vữ Trường An"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/vItem"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="@id/tvItemTen"
        app:layout_constraintTop_toBottomOf="@id/tvItemTen" />
    
    <TextView
        android:id="@+id/tvItemPhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phong: 405"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/vItem"
        app:layout_constraintStart_toStartOf="@id/vItem"/>

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:background="#FD0D0D"
        app:layout_constraintBottom_toBottomOf="@id/tvItemPhong"
        app:layout_constraintEnd_toStartOf="@id/tvItemTien"
        app:layout_constraintTop_toTopOf="@id/tvItemTen" />

    <TextView
        android:id="@+id/tvItemTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.500.000"
        android:textColor="@color/black"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/tvItemTen"
        app:layout_constraintBottom_toBottomOf="@id/tvItemPhong"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FD0303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemPhong"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
